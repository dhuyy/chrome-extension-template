{
  "manifest_version": 3,
  "name": "Chrome Extension Template",
  "version": "0.0.1",
  "description": "Chrome Extension Template provides a starting point for developers to quickly create new Chrome extensions using the latest Manifest V3",
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content-scripts.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}
